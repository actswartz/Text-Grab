<Window
    x:Class="Text_Grab.Views.FullscreenGrabVideo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Text_Grab"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Text Grab - Video Mode"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="False"
    Unloaded="Window_Unloaded"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="SymbolTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="4" />
        </Style>
        <Style TargetType="ToggleButton">
            <Setter Property="Margin" Value="2,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
        </Style>
    </Window.Resources>

    <Grid d:Background="NavajoWhite">
        <Viewbox>
            <Image x:Name="BackgroundImage" Stretch="UniformToFill" />
        </Viewbox>
        <Canvas
            Name="RegionClickCanvas"
            ContextMenuOpening="RegionClickCanvas_ContextMenuOpening"
            Cursor="Cross"
            MouseDown="RegionClickCanvas_MouseDown"
            MouseEnter="RegionClickCanvas_MouseEnter"
            MouseLeave="RegionClickCanvas_MouseLeave"
            MouseMove="RegionClickCanvas_MouseMove"
            MouseUp="RegionClickCanvas_MouseUp">
            <Canvas.Background>
                <SolidColorBrush x:Name="BackgroundBrush" Opacity="0.01" Color="Black" />
            </Canvas.Background>
            <Canvas.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        Click="CopyMenuItem_Click"
                        Header="Copy"
                        InputGestureText="Ctrl+C" />
                    <MenuItem
                        Click="EditMenuItem_Click"
                        Header="Edit"
                        InputGestureText="Ctrl+E" />
                    <MenuItem
                        Click="CancelMenuItem_Click"
                        Header="Cancel"
                        InputGestureText="Esc" />
                </ContextMenu>
            </Canvas.ContextMenu>
        </Canvas>

        <Border
            x:Name="TopButtonsStackPanel"
            Margin="12"
            Padding="8"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource ControlElevationBorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel
                Margin="2,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Border
                    x:Name="ModeButtonsBorder"
                    Margin="2,0"
                    BorderBrush="{StaticResource Teal}"
                    BorderThickness="2"
                    CornerRadius="4">
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton
                            x:Name="FreezeToggleButton"
                            Click="FreezeToggleButton_Click"
                            IsChecked="False"
                            ToolTip="Freeze (F)">
                            <TextBlock Style="{StaticResource SymbolTextStyle}" Text="&#xE768;" />
                        </ToggleButton>
                        <ToggleButton
                            x:Name="NewGrabFrameToggleButton"
                            Click="NewGrabFrameToggleButton_Click"
                            IsChecked="False"
                            ToolTip="Grab Frame (G)">
                            <TextBlock Style="{StaticResource SymbolTextStyle}" Text="&#xE7C5;" />
                        </ToggleButton>
                        <ToggleButton
                            x:Name="SendToEditTextToggleButton"
                            Click="SendToEditTextToggleButton_Click"
                            IsChecked="False"
                            ToolTip="Send to Edit Text Window (E)">
                            <TextBlock Style="{StaticResource SymbolTextStyle}" Text="&#xE70F;" />
                        </ToggleButton>
                    </StackPanel>
                </Border>

                <wpfui:DropDownButton
                    x:Name="NextStepDropDownButton"
                    Height="34"
                    Margin="2,0"
                    IsDefault="True"
                    Content="Capture (Enter)"
                    Icon="Camera24"
                    Click="NextStepButton_Click">
                    <wpfui:DropDownButton.Flyout>
                        <wpfui:Flyout Placement="Bottom">
                            <StackPanel MinWidth="150">
                                <wpfui:Button
                                    x:Name="CaptureAndCopyButton"
                                    Margin="0,0,0,4"
                                    HorizontalAlignment="Stretch"
                                    Click="CaptureAndCopyButton_Click"
                                    Content="Capture and Copy"
                                    Icon="Camera24" />
                                <wpfui:Button
                                    x:Name="CaptureAndEditButton"
                                    Margin="0,0,0,4"
                                    HorizontalAlignment="Stretch"
                                    Click="CaptureAndEditButton_Click"
                                    Content="Capture and Edit"
                                    Icon="Edit24" />
                                <wpfui:Button
                                    x:Name="CaptureAndInsertButton"
                                    Margin="0,0,0,4"
                                    HorizontalAlignment="Stretch"
                                    Click="CaptureAndInsertButton_Click"
                                    Content="Capture and Insert"
                                    Icon="ArrowEnter24" />
                            </StackPanel>
                        </wpfui:Flyout>
                    </wpfui:DropDownButton.Flyout>
                </wpfui:DropDownButton>

                <!-- Video Mode Specific Controls -->
                <Border
                    x:Name="VideoControlsBorder"
                    Margin="2,0"
                    BorderBrush="{StaticResource Teal}"
                    BorderThickness="2"
                    CornerRadius="4">
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton
                            x:Name="StartCaptureToggleButton"
                            Click="StartCaptureToggleButton_Click"
                            IsChecked="False"
                            ToolTip="Start/Stop Continuous Capture (S)">
                            <TextBlock Style="{StaticResource SymbolTextStyle}" Text="&#xE768;" />
                        </ToggleButton>
                        <wpfui:TextBox
                            x:Name="CaptureIntervalBox"
                            Width="80"
                            Margin="4,0"
                            PlaceholderText="2.0"
                            ToolTip="Capture Interval (seconds)"
                            TextChanged="CaptureIntervalBox_TextChanged" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Capture Status Indicator -->
        <Border
            x:Name="CaptureStatusBorder"
            Margin="12"
            Padding="8"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource ControlElevationBorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <Ellipse 
                    x:Name="RecordingIndicator" 
                    Width="12" 
                    Height="12" 
                    Fill="Red" 
                    Margin="0,0,8,0"/>
                <TextBlock x:Name="CaptureStatusText" Text="Capturing..." />
            </StackPanel>
        </Border>
    </Grid>
</Window>
